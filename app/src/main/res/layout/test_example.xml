<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:id="@+id/TestExampleProfileImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher_foreground"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
    />
    <TextView
            android:id="@+id/TestExampleProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Luja Shakya"
            android:textSize="28sp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/TestExampleProfileImage"
    />
    <TextView
            android:id="@+id/TestExampleProfileRoll"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TestExampleProfileName"
            android:layout_marginTop="20dp"
            android:text="CRN: KCE074BCT022"
            android:textSize="28sp"
    />
    <TextView
            android:id="@+id/TestExampleProfileAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/TestExampleProfileRoll"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="Address: Bhaktapur-7,\nInacho"
            android:textSize="28sp"
    />

    <TextView
            android:id="@+id/TestExampleProfilePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/TestExampleProfileAddress"
            android:layout_marginTop="20dp"
            android:text="PhoneNo.: 9860685929"
            android:textSize="28sp"
    />
    <Button
            android:id="@+id/TestExampleProfileDone"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorSuccess"
            android:text="Done"
            android:textColor="@color/colorsecondary"
            android:textSize="22sp"
    />

</RelativeLayout>